{
  "version": 2,
  "builds": [
    {
      "src": "./package.json",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": [
          "dist/**", 
          "public/**", 
          "*.html", 
          "style.css", 
          "fonts/**" 
        ]
      }
    }
  ],
  "routes": [
    { "src": "^/$", "dest": "index.html" },
    { "handle": "filesystem" },
    {
      "src": "/api/(.*)",
      "dest": "/dist/server.js"
    },
    {
      "src": "/login",
      "methods": ["POST"],
      "dest": "/dist/server.js"
    },
     {
      "src": "/logout",
      "methods": ["POST"],
      "dest": "/dist/server.js"
    },
    {
      "src": "/admin.html",
      "dest": "/dist/server.js"
    }
  ]
} 